@using PastryTracker.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Vendors</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="container">
      <h2>Vendor List</h2>
      <ul>
      @foreach (Vendor vendor in Model)
      {
        <li id="@vendor.ID">
          <a href=""> @vendor.Name </a>
        </li>
      }
      </ul>
      <a class="btn btn-success" href="/vendors/new">Add Vendor</a>
  </body>
</html>